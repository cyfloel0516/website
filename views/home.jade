					div.portofolio.row
						div.portofolio-image-wrapper.col-md-6
							img.portofolio-image(src="images/caption_screenshot.png")
						div.portofolio-content-wrapper.col-md-6
							h4.portofolio-title="Captioning System"
							p.portofolio-subtitle="Syracuse University"
							ul
								li="Full-stack Developer"
								li="For students and instructors to correct captions, make bookmarks, write comments and communicate with others"
								li="Docker, PHP, Laraval, JavaScript, HTML5, CSS, jQuery, BootStrap..."
