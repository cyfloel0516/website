block css
	link(href='css/home.css', rel='stylesheet')
	link(href='css/works.css', rel='stylesheet')
block body
	div#home-wrapper
		div#main-wrapper
			div#contact-info-wrapper.row
				p#my-name="Hey! I'm Junkai Yang."
