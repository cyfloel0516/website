- var menus = { 'Home': ['/', 'glyphicon-home'], 'My Blogs': ['/blog', 'glyphicon-th-list'], 'My Works': ['/work', 'glyphicon-check'], 'About Me': ['/aboutme', 'glyphicon-user'] };

block variables
	- var selected = 'Home';
doctype html
html
	head
		meta(charset='UTF-8')
		meta(charset='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width,initial-scale=1')
		title="Junkai Yang"

		link(href='/bootstrap-3.3.6-dist/css/bootstrap.min.css', rel='stylesheet')
		link(href='/css/styles.css', rel='stylesheet')
		block css

		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
		script(src='/bootstrap-3.3.6-dist/js/bootstrap.js')

		block advanced_js

	body
		div#container
			div#top-wrapper
				nav#top-nav.navbar.navbar-default.navbar-inverse.navbar-fixed-top
					div.container-fluid
						div.navbar-header
							button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#top-nav-items")
								span.sr-only
								span.icon-bar
								span.icon-bar
								span.icon-bar
							a.navbar-brand(href="#")='Junkai Yang'
						div#top-nav-items.collapse.navbar-collapse
							ul.nav.navbar-nav
								each value, key in menus
									if selected == key
										li.active.nav-item
											a(href=value[0])
												span(class="glyphicon #{value[1]}", aria-hidden="true")
												| #{key}
									else
										li.nav-item
											a(href=value[0])
												span(class="glyphicon #{value[1]}", aria-hidden="true")
												|#{key}
			div#body-wrapper
				block body


			div#footer-wrapper
				div#footer
					a.contact-link(href="https://www.facebook.com/profile.php?id=100003043347203&fref=nf&pnref=story", target="_blank")="Facebook"
					a.contact-link(href="https://www.linkedin.com/in/junkai-yang-51468b73", target="_blank")="LinkedIn"
					a.contact-link(href="https://github.com/cyfloel0516", target="_blank")="Github"
					a.contact-link(target="_blank", href="https://github.com/cyfloel0516/website")="Mail"
					br
					br
					a(href="mailto:cyfloel0516@gmail.com")="Github"
					span=" for this site"
					p="Designed, developed and maintained by Junkai Yang."

		block js
